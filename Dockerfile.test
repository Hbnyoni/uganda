# Minimal test Dockerfile for quick validation
FROM python:3.11-slim

WORKDIR /app

# Install minimal dependencies for testing
RUN pip install --no-cache-dir \
    jupyter \
    pandas \
    numpy

# Create basic structure  
RUN mkdir -p /app/data /app/outputs /app/notebooks

# Simple test script
RUN echo '#!/bin/bash\necho "CHEAQI Test Container is working!"\npython --version\necho "Ready for full deployment."' > /app/test.sh && chmod +x /app/test.sh

EXPOSE 8888

CMD ["python", "-m", "jupyter", "lab", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root", "--notebook-dir=/app"]